package entra21.pkg.kaio;
import javax.swing.JOptionPane;

public class Encomenda{
    //public static void main(String[] args){
    
    int tamanho = 100;
    int atual1 = 0;
    String[] ids = new String[tamanho];
    String[] tipoEncomendas = new String[tamanho];
    String[] idClientes = new String[tamanho];
    String[] idProdutos = new String[tamanho];
    int[] quantidades = new int[tamanho];
    String[] emiss = new String[tamanho];
    String[] delivery = new String[tamanho];
    double[] valors = new double[tamanho];
    
    
    ids[atual1] = JOptionPane.showInputDialog(null, "Digite o id da encomenda");
    tipoEncomendas[atual1] = JOptionPane.showInputDialog(null, "Tipo de encomenda");
    idClientes[atual1] = JOptionPane.showInputDialog(null, "Digite o id do cliente");
    idProdutos[atual1] = JOptionPane.showInputDialog(null, "Digite o id do produto");
    quantidades[atual1] = Integer.parseInt(JOptionPane.showInputDialog(null, "Quantidade de encomenda"));
    emiss[atual1] = JOptionPane.showInputDialog(null, "Data de emissão");
    delivery[atual1] = JOptionPane.showInputDialog(null, "Data de entrega");
    valors[atual1] = Double.parseDouble(JOptionPane.showInputDialog(null, "Valor da encomenda"));
    }
    
    }